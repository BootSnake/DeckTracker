<Window x:Class="DeckTracker.Windows.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeckTracker.Windows"
        mc:Ignorable="d"
        Title="OverlayWindow" Height="300" Width="300" Background="{x:Null}" ResizeMode="NoResize"
        ShowInTaskbar="False" AllowsTransparency="True" WindowStyle="None" Topmost="True" Loaded="OnLoaded" SourceInitialized="OnSourceInitialized">
    <Grid>
        <Canvas Name="Canvas" HorizontalAlignment="Left" VerticalAlignment="Top"></Canvas>
    </Grid>
</Window>
